<darkViews:DarkWpfViewBase
    x:Class="Sample.WPF.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:darkViews="clr-namespace:DarkHelpers.WPF;assembly=DarkHelpers.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Sample.WPF.ViewModels"
    Title="Home"
    Width="800"
    Height="450"
    x:TypeArguments="viewModels:HomeViewModel"
    mc:Ignorable="d">
    <Border Padding="10">
        <WrapPanel>
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="Background" Value="#606060" />
                    <Setter Property="Foreground" Value="#ffffff" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </WrapPanel.Resources>
            <Button Command="{Binding ObservableCollectionCommand}" Content="Observable collection demo" />
        </WrapPanel>
    </Border>
</darkViews:DarkWpfViewBase>
